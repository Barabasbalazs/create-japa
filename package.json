{
  "name": "create-japa",
  "description": "Setup japa inside an existing Node.js project",
  "version": "2.0.0-3",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/bin",
    "build/templates",
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "bin": {
    "create-japa": "build/bin/run.js"
  },
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "pretest": "npm run lint && npm run typecheck",
    "test": "c8 npm run quick:test",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc && copyfiles templates/* build",
    "build": "npm run compile",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "quick:test": "node --enable-source-maps --loader ts-node/esm bin/test.ts",
    "sync-labels": "github-label-sync --labels .github/labels.json japa/file-system"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@japa/assert": "^2.0.0",
    "@japa/file-system": "^2.0.0",
    "@japa/runner": "^3.0.0",
    "@swc/core": "1.3.82",
    "@types/gradient-string": "^1.1.3",
    "@types/node": "^20.8.3",
    "@types/which-pm-runs": "^1.0.0",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@adonisjs/ace": "^12.3.1-13",
    "@antfu/install-pkg": "^0.1.1",
    "edge.js": "^6.0.0-10",
    "gradient-string": "^2.0.2",
    "which-pm-runs": "^1.1.0"
  },
  "author": "julien-r44,virk",
  "license": "MIT",
  "homepage": "https://github.com/japa/create-japa#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/japa/create-japa.git"
  },
  "bugs": {
    "url": "https://github.com/japa/create-japa/issues"
  },
  "keywords": [
    "japa",
    "init"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
